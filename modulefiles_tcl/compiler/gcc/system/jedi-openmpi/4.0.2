#%Module######################################################################
##
##      Open mpi
##
proc ModulesHelp { } {
        puts stderr "set up Open mpi module paths"
}

set base $env(OPT)
set name openmpi
set ver 4.0.2

prereq jedi-gcc

module load openmpi/4.0.2

prepend-path MODULEPATH $base/modulefiles/mpi/gcc/system/$name/$ver

setenv "MPI_FC"   "mpifort"
setenv "MPI_CC"   "mpicc"
setenv "MPI_CXX"  "mpicxx"

unset base
unset name
unset ver
