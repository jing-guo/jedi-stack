#%Module######################################################################
##
##      Intel compiler suite
##
proc ModulesHelp { } {
        puts stderr "Load gnu compilers"
}

set base $env(OPT)
set name gcc
set ver system

module load gcc/system

prepend-path MODULEPATH $base/modulefiles/compiler/$name/$ver

setenv "FC"   "gfortran"
setenv "CC"   "gcc"
setenv "CXX"  "g++"
setenv "SERIAL_FC"   "gfortran"
setenv "SERIAL_CC"   "gcc"
setenv "SERIAL_CXX"  "g++"

unset base
unset name
unset ver
