#%Module######################################################################
##
##      HDF5
##
proc ModulesHelp { } {
        puts stderr "Load HDF5"
}


set comp gcc-system
set mpi openmpi-3.1.4
set name hdf5
set ver 1.10.5
set base $env(OPT)/$comp/$mpi/$name/$ver

prepend-path "PATH" $base/bin 
prepend-path "LD_LIBRARY_PATH" $base/lib
prepend-path "CPATH" $base/include
prepend-path "MANPATH" $base/share/man

setenv "HDF5_ROOT" $base
setenv "HDF5_INCLUDES" $base/include 
setenv "HDF5_LIBRARIES" $base/lib
setenv "HDF5_VERSION" $ver

unset comp
unset mpi
unset name
unset ver
unset base
