#%Module######################################################################
##
##      PNETCDF
##
proc ModulesHelp { } {
        puts stderr "Load PNETCDF"
}

set comp gcc-system
set mpi openmpi-3.1.4
set name pnetcdf
set ver 1.11.2
set base $env(OPT)/$comp/$mpi/$name/$ver

prepend-path "PATH" $base/bin 
prepend-path "LD_LIBRARY_PATH" $base/lib
prepend-path "LIBRARY_PATH" $base/lib
prepend-path "CPATH" $base/include
prepend-path "MANPATH" $base/share/man

setenv "PNETCDF" $base
setenv "PNETCDF_ROOT" $base
setenv "PNETCDF_INCLUDES" $base/include 
setenv "PNETCDF_LIBRARIES" $base/lib
setenv "PNETCDF_VERSION" $ver

unset comp
unset mpi
unset name
unset ver
unset base

