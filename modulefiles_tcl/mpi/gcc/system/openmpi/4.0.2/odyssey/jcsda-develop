#%Module######################################################################
##
##    odyssey
##
proc ModulesHelp { } {
        puts stderr "Load odyssey"
}

set comp gcc-system
set mpi openmpi-4.0.2
set name odyssey
set ver jcsda-develop
set base $env(OPT)/$comp/$mpi/$name/$ver

prereq odc

???? not done from here - Mark Miesch advices that ODC and Odyssey are not needed
???? by ithe main JEDI: ufo-bundle and fv3-bundle should pass without ODC but a
???? few tests in the ioda-converters may fail

set odc_lib $odc_ROOT/lib
set olib_pattern $base/lib/python3*/site-packages

prepend-path "PATH" $base/bin 
prepend-path "LD_LIBRARY_PATH" $base/lib
prepend-path "CPATH" $base/include
prepend-path "MANPATH" $base/share/man

setenv "ODC_ROOT"  $base
setenv "ODC_PATH"  $base
setenv "ODC_VERSION" $ver

unset comp
unset mpi
unset name
unset ver
unset base
